<h1>Add a new order for @Model.Name</h1>

<form action="/vendor/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
  <label for="orderDescription">Order Description.</label>
  <input id="orderDescription" name="orderDescription" type="text">
  <label for="price">Price of the order.</label>
  <input id="price" name="price" type="number">
  <label for="day">Delivery date.</label>
  <input id="day" name="day" type="text"> 
  <button type='submit'>Add order.</button>
</form>