@using Bakery.Models;

<h1>To Do List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no items in your to do list!</p>
}
@if(Model.Count != 0)
{
  @foreach (Parcel parcel in Model)
  {
    <li>@parcel.Volume meters cubed</li>
    <li>@parcel.Weight kilograms</li>
    <li>$@parcel.Cost money dollars</li>
    <br>
  }
}

</ul>
<a href="/items/new">Add a new item.</a>